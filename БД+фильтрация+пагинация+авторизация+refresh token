import os
from fastapi_pagination import Page, add_pagination
from fastapi_filter.contrib.sqlalchemy import Filter
from fastapi_pagination.ext.sqlalchemy import paginate as sqlalchemy_pagination
from fastapi.security import OAuth2PasswordRequestForm, OAuth2PasswordBearer
from jose import jwt, JWTError
from passlib.context import CryptContext
from sqlalchemy.orm import Session, declarative_base, sessionmaker, relationship
from sqlalchemy import create_engine, Column, String, Integer, Boolean, Text, Float, ForeignKey
from typing import Optional, List, Generic, Type, TypeVar
from fastapi import FastAPI, HTTPException, Depends
from pydantic import BaseModel, Field
from datetime import datetime, timedelta

SECRET_KEY = os.getenv("SECRET_KEY", 'my_secret_key')
ALGORITHM = "HS256"
ACCESS_TOKEN_EXPIRE_MINUTES = 60
REFRESH_TOKEN_EXPIRE_DAYS = 10

DATABASE_URL = "sqlite:///database.db"
engine = create_engine(DATABASE_URL, connect_args={"check_same_thread": False})
SessionLocal = sessionmaker(autocommit=False, autoflush=False, bind=engine)
Base = declarative_base()
app = FastAPI()
add_pagination(app)
pwd_context = CryptContext(schemes=["bcrypt"], deprecated="auto")
oauth2_scheme = OAuth2PasswordBearer(tokenUrl="login")
ModelType = TypeVar("ModelType", bound=Base)
CreateSchemaType = TypeVar("CreateSchemaType", bound=BaseModel)
OutSchemaType = TypeVar("OutSchemaType", bound=BaseModel)
UpdateSchemaType = TypeVar("UpdateSchemaType", bound=BaseModel)


def get_db():
    db = SessionLocal()
    try:
        yield db
    finally:
        db.close()


def password_hash(password):
    return pwd_context.hash(password)


def verify_password(plain_password, hashed_password):
    return pwd_context.verify(plain_password, hashed_password)


def create_access_token(data: dict):
    to_encode = data.copy()
    expire = datetime.utcnow() + timedelta(minutes=ACCESS_TOKEN_EXPIRE_MINUTES)
    to_encode.update({"exp": expire})
    return jwt.encode(to_encode, SECRET_KEY, algorithm=ALGORITHM)


def create_refresh_token(data: dict):
    to_encode = data.copy()
    expire = datetime.utcnow() + timedelta(days=REFRESH_TOKEN_EXPIRE_DAYS)
    to_encode.update({"exp": expire})
    return jwt.encode(to_encode, SECRET_KEY, algorithm=ALGORITHM)


def decode_token(token: str):
    try:
        payload = jwt.decode(token, SECRET_KEY, algorithms=[ALGORITHM])
        return payload
    except JWTError:
        raise HTTPException(status_code=404, detail="Invalid token")


class User(Base):
    __tablename__ = "users"

    id = Column(Integer, primary_key=True)
    username = Column(String, unique=True, nullable=False)
    email = Column(String, unique=True, nullable=False)
    hashed_password = Column(String, nullable=False)
    role = Column(String, default="user")

    is_active = Column(Boolean, default=True)

    cart = relationship("CartItem", back_populates="user")


class Category(Base):
    __tablename__ = "categories"

    id = Column(Integer, primary_key=True)
    name = Column(String, unique=True, nullable=False)

    products = relationship("Product", back_populates="category")


class Product(Base):
    __tablename__ = "products"

    id = Column(Integer, primary_key=True)
    title = Column(String, nullable=False)
    description = Column(Text, nullable=True)
    price = Column(Float, nullable=False)
    image_url = Column(String, nullable=True)

    category_id = Column(Integer, ForeignKey("categories.id"))
    category = relationship("Category", back_populates="products")


class CartItem(Base):
    __tablename__ = "cart_items"

    id = Column(Integer, primary_key=True)
    user_id = Column(Integer, ForeignKey("users.id"))
    product_id = Column(Integer, ForeignKey("products.id"))
    quantity = Column(Integer, default=1)

    product = relationship("Product")
    user = relationship("User", back_populates="cart")


class CreateUser(BaseModel):
    username: str
    password: str
    email: str


class Token(BaseModel):
    access_token: str
    token_type: str = "Bearer"


class CreateCategory(BaseModel):
    name: str


class CreateProduct(BaseModel):
    title: str
    description: Optional[str] = None
    price: float
    image_url: Optional[str] = None
    category_id: Optional[int] = None


class CreateCart(BaseModel):
    product_id: int
    quantity: int = 1


class CartOut(BaseModel):
    id: int
    quantity: int
    product_id: int

    class Config:
        from_attributes = True


class ProductOut(BaseModel):
    id: int
    title: str
    description: Optional[str] = None
    price: float
    image_url: Optional[str] = None

    class Config:
        from_attributes = True


class CategoryOut(BaseModel):
    id: int
    name: str
    products: List[ProductOut] = Field(default_factory=list)

    class Config:
        from_attributes = True


class UserOut(BaseModel):
    id: int
    username: str
    email: str
    role: str
    is_active: bool = True

    class Config:
        from_attributes = True


class UpdateUser(BaseModel):
    username: Optional[str] = None
    email: Optional[str] = None
    password: Optional[str] = None

    class Config:
        from_attributes = True


class UpdateCategory(BaseModel):
    name: Optional[str] = None

    class Config:
        from_attributes = True


class UpdateProduct(BaseModel):
    title: Optional[str] = None
    description: Optional[str] = None
    price: Optional[float] = None
    image_url: Optional[str] = None
    category_id: Optional[int] = None

    class Config:
        from_attributes = True


class UpdateCart(BaseModel):
    quantity: Optional[int] = None

    class Config:
        from_attributes = True


class UserFilter(Filter):
    username__ilike: Optional[str] = None
    email__ilike: Optional[str] = None

    class Constants(Filter.Constants):
        model = User


class UserService:
    def __init__(self, db: Session):
        self.db = db

    def get_filtered_users(self, filters: UserFilter):
        query = self.db.query(User)
        return filters.filter(query)

    def get_filtered_user_id(self, user_id: int):
        return self.db.query(User).filter(User.id == user_id).first()


class CategoryFilter(Filter):
    name__ilike: Optional[str] = None
    products__title__ilike: Optional[str] = None

    class Constants(Filter.Constants):
        model = Category


class CategoryService:
    def __init__(self, db: Session):
        self.db = db

    def get_filtered_categories(self, filters: CategoryFilter):
        query = self.db.query(Category).outerjoin(Category.products)
        return filters.filter(query)

    def get_filtered_category_id(self, category_id: int):
        return self.db.query(Category).filter(Category.id == category_id).first()


class ProductFilter(Filter):
    title__ilike: Optional[str] = None
    price__gte: Optional[float] = None
    price__lte: Optional[float] = None
    category_id__eq: Optional[int] = None

    class Constants(Filter.Constants):
        model = Product


class ProductService:
    def __init__(self, db: Session):
        self.db = db

    def get_filtered_products(self, filters: ProductFilter):
        query = self.db.query(Product)
        return filters.filter(query)

    def get_filtered_product_id(self, product_id: int):
        return self.db.query(Product).filter(Product.id == product_id).first()


class CartFilter(Filter):
    quantity__gte: Optional[int] = None
    quantity__lte: Optional[int] = None
    user_id__eq: Optional[int] = None
    product_id__eq: Optional[int] = None

    class Constants(Filter.Constants):
        model = CartItem


class CartService:
    def __init__(self, db: Session):
        self.db = db

    def get_filtered_carts(self, filters: CartFilter):
        query = self.db.query(CartItem)
        return filters.filter(query)

    def get_filtered_cart_id(self, cart_id: int):
        return self.db.query(CartItem).filter(CartItem.id == cart_id).first()


class AuthService:
    def __init__(self, db: Session):
        self.db = db

    def register_user(self, username: str, email: str, password: str):
        if self.db.query(User).filter(User.username == username).first():
            raise HTTPException(status_code=400, detail="Username already exists")
        hashed_password = password_hash(password)
        new_user = User(username=username, email=email, hashed_password=hashed_password, role='user')
        self.db.add(new_user)
        self.db.commit()
        self.db.refresh(new_user)
        return new_user

    def login_user(self, username: str, password: str):
        user = self.db.query(User).filter(User.username == username).first()
        if not user or not verify_password(password, user.hashed_password):
            raise HTTPException(status_code=404, detail="User not found")
        return user


class CRUDBase(Generic[ModelType, CreateSchemaType, OutSchemaType, UpdateSchemaType]):
    def __init__(self, model: Type[ModelType]):
        self.model = model

    def get_all(self, db: Session):
        return db.query(self.model).all()

    def get_one(self, db: Session, obj_id: int):
        return db.query(self.model).filter(self.model.id == obj_id).first()

    def create(self, db: Session, obj_in: CreateSchemaType) -> ModelType:
        obj_data = self.model(**obj_in.dict(exclude_unset=True))
        db.add(obj_data)
        db.commit()
        db.refresh(obj_data)
        return obj_data

    def update(self, db: Session, db_obj: ModelType, obj_in: UpdateSchemaType) -> ModelType:
        obj_data = obj_in.dict(exclude_unset=True)
        for field, value in obj_data.items():
            setattr(db_obj, field, value)
        db.commit()
        db.refresh(db_obj)
        return db_obj

    def remove(self, db: Session, obj_id: int):
        obj = db.query(self.model).filter(self.model.id == obj_id).first()
        if obj:
            db.delete(obj)
            db.commit()
            return obj


def get_current_user(token: str = Depends(oauth2_scheme), db: Session = Depends(get_db)):
    payload = decode_token(token)
    username = payload.get('sub')
    if not username:
        raise HTTPException(status_code=404, detail="Invalid token")
    user = db.query(User).filter(User.username == username).first()
    if not user:
        raise HTTPException(status_code=404, detail="User not found")
    return user


def require_admin(current_user: User = Depends(get_current_user)):
    if current_user.role != 'admin':
        raise HTTPException(status_code=403, detail="Forbidden")
    return current_user


user_crud = CRUDBase(User)
category_crud = CRUDBase(Category)
product_crud = CRUDBase(Product)
cart_crud = CRUDBase(CartItem)
Base.metadata.create_all(bind=engine)


@app.post('/users/register', response_model=UserOut)
def register(user: CreateUser, db: Session = Depends(get_db)):
    auth = AuthService(db)
    user = auth.register_user(user.username, user.email, user.password)
    return user


@app.post('/users/login', response_model=Token)
def login(form_data: OAuth2PasswordRequestForm = Depends(), db: Session = Depends(get_db)):
    auth = AuthService(db)
    user = auth.login_user(form_data.username, form_data.password)
    access_token = create_access_token(data={'sub': user.username, 'role': user.role})
    refresh_token = create_refresh_token(data={'sub': user.username, 'role': user.role})
    return {'access_token': access_token, 'refresh_token': refresh_token, 'token_type': 'Bearer'}


@app.post('/users/refresh', response_model=Token)
def refresh(form_data: OAuth2PasswordRequestForm = Depends(), db: Session = Depends(get_db)):
    auth = AuthService(db)
    user = auth.login_user(form_data.username, form_data.password)
    access_token = create_refresh_token(data={'sub': user.username, 'role': user.role})
    return {'access_token': access_token, 'token_type': 'Bearer'}


@app.get('/users', response_model=Page[UserOut])
def read_users(db: Session = Depends(get_db), filters: UserFilter = Depends()):
    service = UserService(db)
    user = service.get_filtered_users(filters)
    return sqlalchemy_pagination(user)


@app.get('/users/{user_id}', response_model=UserOut)
def read_user(user_id: int, db: Session = Depends(get_db)):
    service = UserService(db)
    user = service.get_filtered_user_id(user_id)
    if not user:
        raise HTTPException(status_code=404, detail="User not found")
    return user


@app.put('/users/{user_id}', response_model=UserOut)
def update_user(user_id: int, user_update: UpdateUser, db: Session = Depends(get_db), _: User = Depends(require_admin)):
    put_user = user_crud.get_one(db, user_id)
    if not put_user:
        raise HTTPException(status_code=404, detail="User not found")
    return user_crud.update(db, put_user, user_update)


@app.delete('/users/{user_id}', response_model=UserOut)
def delete_users(user_id: int, db: Session = Depends(get_db), _: User = Depends(require_admin)):
    delete_user = user_crud.remove(db, user_id)
    if not delete_user:
        raise HTTPException(status_code=404, detail="User not found")
    return delete_user


@app.get('/categories', response_model=Page[CategoryOut])
def read_categories(db: Session = Depends(get_db), filters: CategoryFilter = Depends()):
    service = CategoryService(db)
    category = service.get_filtered_categories(filters)
    return sqlalchemy_pagination(category)


@app.get('/categories/{category_id}', response_model=CategoryOut)
def read_category(category_id: int, db: Session = Depends(get_db)):
    service = CategoryService(db)
    category = service.get_filtered_category_id(category_id)
    if not category:
        raise HTTPException(status_code=404, detail="Category not found")
    return category


@app.post('/categories', response_model=CategoryOut)
def create_category(category: CreateCategory, db: Session = Depends(get_db), _: User = Depends(require_admin)):
    if db.query(Category).filter(Category.name == category.name).first():
        raise HTTPException(status_code=400, detail="Category already exists")
    new_category = Category(name=category.name)
    db.add(new_category)
    db.commit()
    db.refresh(new_category)
    return new_category


@app.put('/categories/{category_id}', response_model=CategoryOut)
def update_category(category_id: int, category_update: UpdateCategory, db: Session = Depends(get_db),
                    _: User = Depends(require_admin)):
    put_category = category_crud.get_one(db, category_id)
    if not put_category:
        raise HTTPException(status_code=404, detail="Category not found")
    return category_crud.update(db, put_category, category_update)


@app.delete('/categories/{category_id}', response_model=CategoryOut)
def delete_categories(category_id: int, db: Session = Depends(get_db), _: User = Depends(require_admin)):
    delete_category = category_crud.remove(db, category_id)
    if not delete_category:
        raise HTTPException(status_code=404, detail="Category not found")
    return delete_category


@app.get('/products', response_model=Page[ProductOut])
def read_products(db: Session = Depends(get_db), filters: ProductFilter = Depends()):
    service = ProductService(db)
    product = service.get_filtered_products(filters)
    return sqlalchemy_pagination(product)


@app.get('/products/{product_id}', response_model=ProductOut)
def read_product(product_id: int, db: Session = Depends(get_db)):
    service = ProductService(db)
    product = service.get_filtered_product_id(product_id)
    if not product:
        raise HTTPException(status_code=404, detail="Product not found")
    return product


@app.post('/products', response_model=ProductOut)
def create_product(product: CreateProduct, db: Session = Depends(get_db), _: User = Depends(require_admin)):
    check_category = db.query(Category).filter(Category.id == product.category_id).first()
    if not check_category:
        raise HTTPException(status_code=404, detail="Category not found")
    if db.query(Product).filter(Product.title == product.title, Product.category_id == product.category_id).first():
        raise HTTPException(status_code=400, detail="Product already exists")
    new_product = Product(title=product.title, description=product.description, price=product.price,
                          image_url=product.image_url, category_id=product.category_id)
    db.add(new_product)
    db.commit()
    db.refresh(new_product)
    return new_product


@app.put('/products/{product_id}', response_model=ProductOut)
def update_product(product_id: int, product_update: UpdateProduct, db: Session = Depends(get_db),
                   _User=Depends(require_admin)):
    put_product = product_crud.get_one(db, product_id)
    if not put_product:
        raise HTTPException(status_code=404, detail="Product not found")
    return product_crud.update(db, put_product, product_update)


@app.delete('/products/{product_id}', response_model=ProductOut)
def delete_products(product_id: int, db: Session = Depends(get_db), _: User = Depends(require_admin)):
    delete_product = product_crud.remove(db, product_id)
    if not delete_product:
        raise HTTPException(status_code=404, detail="Product not found")
    return delete_product


@app.get('/cart', response_model=Page[CartOut])
def read_cart(current_user: User = Depends(get_current_user), db: Session = Depends(get_db)):
    cart_query = db.query(CartItem).filter(CartItem.user_id == current_user.id)
    if not cart_query.first():  # проверяем, есть ли хотя бы один элемент
        raise HTTPException(status_code=404, detail="Cart not found")
    return sqlalchemy_pagination(cart_query)


@app.post('/cart', response_model=CartOut)
def create_cart(cart: CreateCart, db: Session = Depends(get_db), current_user: User = Depends(get_current_user)):
    check_product = db.query(Product).filter(Product.id == cart.product_id).first()
    if not check_product:
        raise HTTPException(status_code=404, detail="Product not found")
    if db.query(CartItem).filter(CartItem.product_id == cart.product_id, CartItem.user_id == current_user.id).first():
        raise HTTPException(status_code=400, detail="Product already exists")
    new_cart = CartItem(product_id=cart.product_id, quantity=cart.quantity, user_id=current_user.id)
    db.add(new_cart)
    db.commit()
    db.refresh(new_cart)
    return new_cart


@app.put('/cart/{cart_id}', response_model=CartOut)
def update_cart(cart_id: int, cart_update: UpdateCart, db: Session = Depends(get_db),
                current_user: User = Depends(get_current_user)):
    put_cart = db.query(CartItem).filter(CartItem.id == cart_id).first()
    if not put_cart:
        raise HTTPException(status_code=404, detail="Cart not found")
    if put_cart.user_id != current_user.id and current_user.role != 'admin':
        raise HTTPException(status_code=403, detail="You do not have permission to perform this action")
    return cart_crud.update(db, put_cart, cart_update)


@app.delete('/cart/{cart_id}', response_model=CartOut)
def delete_carts(cart_id: int, db: Session = Depends(get_db), current_user: User = Depends(get_current_user)):
    delete_cart = db.query(CartItem).filter(CartItem.id == cart_id).first()
    if not delete_cart:
        raise HTTPException(status_code=404, detail="Cart not found")
    if delete_cart.user_id != current_user.id and current_user.role != 'admin':
        raise HTTPException(status_code=403, detail="You do not have permission to perform this action")
    db.delete(delete_cart)
    db.commit()
    return delete_cart
